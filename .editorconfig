# This file configures editors using the EditorConfig
# scheme: https://editorconfig.org/

root = true

[*.{html,js,json,jsonc,md,mjs}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
[{.editorconfig}]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Keep in sync with deno fmt.
[*.{html,js,json,jsonc,mjs}]
indent_size = 2
indent_style = space
max_line_length = 80
