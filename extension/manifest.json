{
  "manifest_version": 3,
  "name": "Late Chance Predictions",
  "description": "TODO(strager)",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "background": {
    "service_worker": "service_worker.mjs",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitch.tv/*",
        "https://gql.twitch.tv/*",
        "https://www.twitch.tv/*",
        "https://www.twitch.tv/hi"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "host_permissions": [
    "https://twitch.tv/*",
    "https://gql.twitch.tv/*",
    "https://www.twitch.tv/*"
  ]
}
